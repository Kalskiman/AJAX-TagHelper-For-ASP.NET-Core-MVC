@model NF.Samples.UsingAjaxTagHelpers.Models.SampleDataModel
<div class="card">
    <form id="createForm2" method="post" asp-action="SaveData"
          asp-ajax-default-values="false"
          asp-ajax="true"
          asp-ajax-default-functions="false"
          asp-ajax-loading="#ajaxloading"
          asp-ajax-mode="replace"
          asp-ajax-onBegin="onbeginForm()"
          asp-ajax-update="#formResult1"
          asp-ajax-onComplete="oncompleteForm()">
        <div class="card-header">
            <h5 class="modal-title" id="modalheader">
                sample ajax add data form
            </h5>
        </div>
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="modal-footer myFormFooter">
            <!-- Loading icon -->
            <span class="ajax-submit-loader" style="display:none;">
                <span class="fa fa-spinner fa-spin mr-3" style="font-size:30px;"></span>
            </span>

            <!-- Submit button -->
            <button type="submit" class="btn btn-success btn-labeled btn-sm btnSubmit" tabindex="0">
                <span class="btn-label"><i class="fas fa-check"></i></span>
                Save
            </button>

            <!-- Cancel button -->
            <button type="button" class="btn btn-secondary btn-labeled btn-sm" data-dismiss="modal" tabindex="1">
                <span class="btn-label"><i class="fas fa-undo-alt"></i></span>
                Cancel
            </button>
            <div class="row" id="formResult1"></div>
        </div>
    </form>
</div>
<xValidator asp-form-id="createForm2"></xValidator>